<nav class="navbar navbar-expand-lg bg-secondary d-flex justify-content-between">
   <%= image_tag "logo.png", size: "105x55", class: "rounded-circle ms-2"%>
   <% if !current_user.present? %>
      <div class = "me-2">
         <%= link_to "SignUp", users_sign_up_path,  class: "text-center btn btn-danger fs-4 m-2" %>
         <%= link_to "SignIn", sessions_new_path,  class: "text-center btn btn-danger fs-4 m-2" %>
      </div>
   <% else %>
      <h1 class = "fs-2 mt-2 ps-2">Welcome to Posts, <%= current_user.name %></h1>
   <div class = "d-flex" >
      <%= link_to "My Posts", posts_path, class: "text-center btn btn-danger fs-4 m-2" %>
      <%= button_to "Signout", sessions_destroy_path(current_user), method: :delete, class: "text-center btn btn-danger fs-4 m-2" %>
   </div>
   <% end %>
</nav>

<% if current_user.present?%>
   <h1 class = "fs-1 m-1 fw-bold text-danger feed">Your feed</h1>
   <div class="row row-cols-4 g-3 p-2"> 
      <!-- all posts -->
      <% @posts.each do |post| %>
         <div class="col">
            <!-- each post -->
            <div class="text-center p-3 rounded" style="background-color: #93939366;">
               <div class="d-flex flex-start align-items-center gap-2 p-1 ms-2 mt-1 mb-3">
                  <%= image_tag "profile-user.png", size: "30x30", class:"rounded-circle" %>
                  <p class="mb-0 fs-5"><%= post.user.name %></p>
               </div>
               <%= image_tag "post.jpg", size: "140x130", class:"rounded" %>
               <h1 class="fs-3 text-truncate pt-2 my-2"><%= post.title %></h1>
               <%= link_to "View post", post, class: "btn btn-primary fs-5 mt-3" %>
            </div>
         </div>
      <% end %>
   </div>
<% else %>
   <h1 class = "fs-2 m-4 ps-2" >Login to see posts</h1>
<% end %>