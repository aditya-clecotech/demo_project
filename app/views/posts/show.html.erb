<div class="card d-flex align-items-center text-center w-50 bg-secondary mx-auto p-4 mt-5">
   <h2>Post</h2>
   <div class="card-body">
      <div class="card-img-top"><%= image_tag "post.jpg", size: "150x150" %></div>
      <h3 class="card-title"><%= @post.title %></h3>
      <p class="card-text"><%= @post.content %></p>
   </div>
   <div class = "d-flex">
      <%= link_to "Back", root_path, class: "btn btn-dark  fs-5" %>
      <%= button_to "Delete", delete_post_path(@post),method: :delete, class: "btn btn-danger fs-5 d-inline-block mx-2" %>
   </div>
</div>
